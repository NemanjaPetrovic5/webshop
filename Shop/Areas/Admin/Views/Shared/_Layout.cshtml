<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/css/admin.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")


    <link href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- bootbox.js at 4.4.0 -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/admin.js"></script>
    <script>
        $(document).ready(function () {
            var message = '@TempData["msg"]';
            if (message) {
                SendMessage(message, 'info');
            }
        });
    </script>
</head>

<body id="body-pd">

    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        
        <ul class="dropdown-menu settings-menu">
            <li><a href="@Url.Action("Edit", "User", new { email = HttpContext.Current.User.Identity.Name })"><i class="icon-user"></i> Profile</a></li>
            <li>
                @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon-lock"></i> Logout</a>}
            </li>

        </ul>
        <div class="dropdown" style="float:right;">
            <a class="dropbtn">@HttpContext.Current.User.Identity.Name</a>
            <div class="dropdown-content">
                <a href="@Url.Action("Edit", "User", new { email = HttpContext.Current.User.Identity.Name })"><i class="icon-user"></i> Profile</a>
                    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon-lock"></i> Logout</a>
                        }
            </div>
        </div>
    </header>
        <div class="l-navbar" id="nav-bar">
            <nav class="nav">
                <div>
                    <a href="@Url.Action("Index", "Home")" class="nav_logo"> <i class='bx bx-layer nav_logo-icon fa-2x'></i> <span class="nav_logo-name">Admin Panel</span> </a>
                    <div class="nav_list">
                        <a href="@Url.Action("Index", "Home")" class="nav_link active"> <i class='bx bx-grid-alt nav_icon fa-2x'></i> <span class="nav_name">Dashboard</span></a>
                        <a href="@Url.Action("Index", "Product")" class="nav_link"> <i class='bx bx-folder nav_icon fa-2x'></i> <span class="nav_name">Products</span> </a>
                        <a href="@Url.Action("Index", "Category")" class="nav_link"> <i class='bx bx-message-square-detail nav_icon fa-2x'></i> <span class="nav_name">Categories</span> </a>
                        <a href="@Url.Action("Index", "Order")" class="nav_link"> <i class='bx bx-bookmark nav_icon fa-2x'></i> <span class="nav_name">Orders</span> </a>
                        <a href="@Url.Action("Index", "User")" class="nav_link"> <i class='bx bx-user nav_icon fa-2x'></i> <span class="nav_name">Users</span> </a>
                        @* bx bx-bar-chart-alt-2 nav_icon fa-2x *@
                    </div>
                </div> @*<a href="#" class="nav_link"> <i class='bx bx-log-out nav_icon fa-2x'></i> <span class="nav_name">SignOut</span> </a>*@
            </nav>
        </div>
            <div class="content-wrapper">
                <!-- Main content starts -->
                @RenderBody()
            </div>
            <!-- Required Jqurey -->
            <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>

            <!-- Required Fremwork -->
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-growl/1.0.0/jquery.bootstrap-growl.min.js"></script>
            <script src="~/Content/Admin/assets/plugins/tether/dist/js/tether.min.js"></script>
            <script src="~/Content/Admin/assets/plugins/bootstrap/js/bootstrap.min.js"></script>


            <!-- Scrollbar JS-->
            <script src="~/Content/Admin/assets/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>
            <script src="~/Content/Admin/assets/plugins/jquery.nicescroll/jquery.nicescroll.min.js"></script>

            <!--classic JS-->
            <script src="~/Content/Admin/assets/plugins/classie/classie.js"></script>


            <!--datatables JS-->
            <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/plug-ins/1.10.11/sorting/date-eu.js"></script>


            <!-- custom js -->
            <script type="text/javascript" src="~/Content/Admin/assets/js/main.min.js"></script>
            <script type="text/javascript" src="~/Content/Admin/assets/pages/dashboard.js"></script>
            <script type="text/javascript" src="~/Content/Admin/assets/pages/elements.js"></script>
            <script src="~/Content/Admin/assets/js/menu.min.js"></script>
            <script src="~/Content/Admin/assets/js/menu.js"></script>

            <script>
                var $window = $(window);
                var nav = $('.fixed-button');
                $window.scroll(function () {
                    if ($window.scrollTop() >= 200) {
                        nav.addClass('active');
                    }
                    else {
                        nav.removeClass('active');
                    }
                });
            </script>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/jqueryval")
            @RenderSection("scripts", required: false)


            <script src="~/Scripts/bootstrap.min.js"></script>
    </body>
</html>