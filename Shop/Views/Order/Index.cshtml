@using Shop.Models
@model Shop.Models.ViewModels.CreateOrderViewModel
@{
    ViewBag.Title = "Order";
}

<div class="col-lg-12 order-lg-1" style="margin-top:50px">
    <h4 class="mb-3">Billing address</h4>
     @using (Html.BeginForm("CreateOrder", "Order", FormMethod.Post, new { @class = "form" }))
     {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6 mb-3">
                @Html.LabelFor(o => o.FirstName, new { @class = "form-label" })
                @Html.TextBoxFor(o => o.FirstName, new { @class = "form-control", style = "max-width:100% !important;" })
                @Html.ValidationMessageFor(o => o.FirstName)
            </div>
            <div class="col-md-6 mb-3">
                @Html.LabelFor(o => o.LastName, new { @class = "form-label" })
                @Html.TextBoxFor(o => o.LastName, new { @class = "form-control", style = "max-width:100% !important;" })
                @Html.ValidationMessageFor(o => o.LastName)
            </div>
        </div>

        <div class="mb-3">
            @Html.LabelFor(o => o.Address, new { @class = "form-label" })
            @Html.TextBoxFor(o => o.Address, new { @class = "form-control", style = "max-width:100% !important;" })
            @Html.ValidationMessageFor(o => o.Address)
        </div>

        <div class="mb-3">
            @Html.LabelFor(o => o.PostCode, new { @class = "form-label" })
            @Html.TextBoxFor(o => o.PostCode, new { @class = "form-control", style = "max-width:100% !important;" })
            @Html.ValidationMessageFor(o => o.PostCode)
        </div>

        <div class="mb-3">
            @Html.LabelFor(o => o.City, new { @class = "form-label" })
            @Html.TextBoxFor(o => o.City, new { @class = "form-control", style = "max-width:100% !important;" })
            @Html.ValidationMessageFor(o => o.City)
        </div>
        <div class="mb-3">
            @Html.LabelFor(o => o.Phone, new { @class = "form-label" })
            @Html.TextBoxFor(o => o.Phone, new { @class = "form-control", style = "max-width:100% !important;" })
            @Html.ValidationMessageFor(o => o.Phone)
        </div>


        <hr class="mb-4">
        <a href="@Url.Action("Index", "Cart")">Cancel</a>

        <button class="btn btn-primary btn-lg btn-block" type="submit">
            Continue to
            checkout
        </button>
     }
</div>